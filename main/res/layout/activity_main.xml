<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/black" android:id="@+id/sos">
    <Button
            android:text="R"
            android:layout_width="46dp"
            android:layout_height="46dp" android:id="@+id/RightButton"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"
            app:backgroundTint="@color/teal_700" android:background="#FFFFFF"/>
    <Button
            android:text="L"
            android:layout_width="46dp"
            android:layout_height="46dp" android:id="@+id/LeftButton"
            android:layout_marginEnd="128dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"
            app:backgroundTint="@color/teal_700" android:background="#FFFFFF"/>
    <Button
            android:text="U"
            android:layout_width="46dp"
            android:layout_height="46dp" android:id="@+id/UpButton"
            android:layout_marginEnd="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"
            app:backgroundTint="@color/teal_700" android:background="#FFFFFF"/>
    <Button
            android:text="D"
            android:layout_width="46dp"
            android:layout_height="46dp" android:id="@+id/DownButton"
            android:layout_marginEnd="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:backgroundTint="@color/teal_700" android:background="#FFFFFF"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="419dp"
            android:layout_height="445dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/AmuletLayout" android:background="#786E6E"/>

</androidx.constraintlayout.widget.ConstraintLayout>